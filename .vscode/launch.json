{
  "configurations": [
    {
      "type": "aws-sam",
      "request": "direct-invoke",
      "name": "Trigger Hazards",
      "preLaunchTask": "Build",
      "invokeTarget": {
        "target": "code",
        "architecture": "arm64",
        "projectRoot": "dist",
        "lambdaHandler": "api/trigger-hazards.handler"
      },
      "lambda": {
        "runtime": "nodejs22.x"
      },
      "sam": {
        "localArguments": [
          "--container-env-vars",
          "${workspaceFolder}/local.env.json"
        ]
      }
    },
    {
      "type": "aws-sam",
      "request": "direct-invoke",
      "name": "Submit Route",
      "preLaunchTask": "Build",
      "invokeTarget": {
        "target": "code",
        "architecture": "arm64",
        "projectRoot": "dist",
        "lambdaHandler": "api/submit-route.handler"
      },
      "lambda": {
        "runtime": "nodejs22.x",
        "payload": {
          "path": "${workspaceFolder}/test/payloads/api/submit-route.json"
        }
      },
      "sam": {
        "localArguments": [
          "--container-env-vars",
          "${workspaceFolder}/local.env.json"
        ]
      }
    }
  ]
}